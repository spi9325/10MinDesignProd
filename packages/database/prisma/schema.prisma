

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x","debian-openssl-3.0.x"]
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  googleId  String?
  role      String  @default("user")
  @@index([email, googleId])
  @@index([googleId])
}
model OtpStore{
    id        Int      @id @default(autoincrement())
    email     String   @unique
    otp       String
    createdAt DateTime @default(now())
    expiresAt DateTime @default(now())
}
model Wedding{
  id             Int      @id @default(autoincrement())
  componentName  String   @unique
  price          Int
  width          Int? 
  imageUrl       String
}

model TemplateWedding{
    id             Int      @id @default(autoincrement())
    templateId     String   @unique
    TemplateData   String
    createdAt      DateTime @default(now())
}
model TemplateBirthday{
    id             Int      @id @default(autoincrement())
    templateId     String   @unique
    TemplateData   String
    createdAt      DateTime @default(now())
}
model TemplateRip{
    id             Int      @id @default(autoincrement())
    templateId     String   @unique
    TemplateData   String
    createdAt      DateTime @default(now())
}
model TemplateOpening{
    id             Int      @id @default(autoincrement())
    templateId     String   @unique
    TemplateData   String
    createdAt      DateTime @default(now())
}
model TemplateFestival{
    id             Int      @id @default(autoincrement())
    templateId     String   @unique
    TemplateData   String
    createdAt      DateTime @default(now())
    
}